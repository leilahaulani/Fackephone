<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    tools:context="edu.upc.eseiaat.pma.fakephone.FackePhoneActivity">

    <Button
        android:id="@+id/btn_call"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:onClick="call"
        android:text="Call" />

    <Button
        android:id="@+id/btn_clean"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:onClick="clean"
        android:text="Clean" />

    <EditText
        android:id="@+id/num_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:ems="10"
        android:inputType="number" />

    <Button
        android:id="@+id/btn_1"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginTop="35dp"
        android:onClick="click"
        android:text="1"
        android:layout_below="@+id/num_text"
        android:layout_toStartOf="@+id/btn_2"
        android:layout_marginEnd="21dp" />

    <Button
        android:id="@+id/btn_2"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_alignBottom="@+id/btn_1"
        android:layout_centerHorizontal="true"
        android:onClick="click"
        android:text="2" />

    <Button
        android:id="@+id/btn_3"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:onClick="click"
        android:text="3"
        android:layout_marginStart="20dp"
        android:layout_toEndOf="@+id/btn_2"
        android:layout_alignTop="@+id/btn_2"
        android:layout_alignBottom="@+id/btn_2" />

    <Button
        android:id="@+id/btn_4"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_alignEnd="@+id/btn_1"
        android:layout_below="@+id/btn_1"
        android:layout_marginTop="19dp"
        android:onClick="click"
        android:text="4" />

    <Button
        android:id="@+id/btn_5"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_alignEnd="@+id/btn_2"
        android:layout_alignTop="@+id/btn_4"
        android:onClick="click"
        android:text="5" />

    <Button
        android:id="@+id/btn_6"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_alignEnd="@+id/btn_3"
        android:layout_alignTop="@+id/btn_5"
        android:onClick="click"
        android:text="6" />

    <Button
        android:id="@+id/btn_7"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_below="@+id/btn_4"
        android:layout_marginTop="10dp"
        android:onClick="click"
        android:text="7"
        android:layout_alignEnd="@+id/btn_4" />

    <Button
        android:id="@+id/btn_8"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_alignBottom="@+id/btn_7"
        android:layout_alignEnd="@+id/btn_5"
        android:onClick="click"
        android:text="8" />

    <Button
        android:id="@+id/btn_9"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_alignBottom="@+id/btn_8"
        android:layout_alignStart="@+id/btn_6"
        android:layout_alignTop="@+id/btn_8"
        android:onClick="click"
        android:text="9" />

    <Button
        android:id="@+id/btn_0"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:onClick="click"
        android:text="0"
        android:layout_below="@+id/btn_8"
        android:layout_alignStart="@+id/btn_8"
        android:layout_marginTop="16dp" />

</RelativeLayout>
